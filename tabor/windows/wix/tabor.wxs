<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs" xmlns:ui="http://wixtoolset.org/schemas/v4/wxs/ui">
   <Package Name="Tabor" UpgradeCode="87c21c74-dbd5-4584-89d5-46d9cd0c40a7" Language="1033" Codepage="1252" Version="0.17.0-dev" Manufacturer="Tabor" InstallerVersion="200">
      <MajorUpgrade AllowSameVersionUpgrades="yes" DowngradeErrorMessage="A newer version of [ProductName] is already installed." />
      <Icon Id="TaborIco" SourceFile=".\tabor\windows\tabor.ico" />
      <WixVariable Id="WixUILicenseRtf" Value=".\tabor\windows\wix\license.rtf" />
      <Property Id="ARPPRODUCTICON" Value="TaborIco" />
      <MediaTemplate EmbedCab="yes" />
      <ui:WixUI Id="WixUI_Minimal" />
      <Feature Id="ProductFeature" Title="ConsoleApp" Level="1">
         <ComponentRef Id="TaborExe" />
         <ComponentRef Id="TaborShortcut" />
         <ComponentRef Id="ModifyPathEnv" />
         <ComponentRef Id="ContextMenu" />
      </Feature>
      <!-- Application binaries -->
      <DirectoryRef Id="TaborProgramFiles">
         <Component Id="TaborExe">
            <File Id="TaborExeFile" Source=".\target\release\tabor.exe" Name="tabor.exe" KeyPath="yes" />
         </Component>
      </DirectoryRef>
      <DirectoryRef Id="TaborProgramMenu">
         <!-- Application shortcut -->
         <Component Id="TaborShortcut" Guid="aa36e61a-23cd-4383-b744-2f78e912f0dc">
            <Shortcut Id="TaborShortcutFile" Name="Tabor" Description="A tabbed, cross-platform, GPU-accelerated terminal emulator" Target="[TaborProgramFiles]tabor.exe" />
            <RemoveFolder Id="TaborProgramMenu" On="uninstall" />
            <RegistryValue Root="HKCU" Key="Software\Microsoft\Tabor" Name="installed" Type="integer" Value="1" KeyPath="yes" />
         </Component>
      </DirectoryRef>
      <DirectoryRef Id="TaborProgramFiles">
         <!-- Add to PATH -->
         <Component Id="ModifyPathEnv" Guid="edf0b679-9eb6-46f7-a5d1-5160f30acb34" KeyPath="yes">
            <Environment Id="PathEnv" Value="[TaborProgramFiles]" Name="PATH" Permanent="no" Part="first" Action="set" System="yes" />
         </Component>
      </DirectoryRef>
      <StandardDirectory Id="ProgramFiles64Folder">
         <Directory Id="TaborProgramFiles" Name="Tabor" />
      </StandardDirectory>
      <StandardDirectory Id="ProgramMenuFolder">
         <Directory Id="TaborProgramMenu" Name="Tabor" />
      </StandardDirectory>
      <!-- Add context menu -->
      <Component Id="ContextMenu" Guid="449f9121-f7b9-41fe-82da-52349ea8ff91" Directory="TARGETDIR">
         <RegistryKey Root="HKCU" Key="Software\Classes\Directory\Background\shell\Open Tabor here\command">
            <RegistryValue Type="string" Value='[TaborProgramFiles]tabor.exe --working-directory "%v"' KeyPath="yes" />
         </RegistryKey>
         <RegistryKey Root="HKCU" Key="Software\Classes\Directory\Background\shell\Open Tabor here">
            <RegistryValue Type="string" Name="Icon" Value="[TaborProgramFiles]tabor.exe" />
         </RegistryKey>
      </Component>
   </Package>
</Wix>
